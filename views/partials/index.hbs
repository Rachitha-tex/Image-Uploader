
<section class="section my-4">
 <div class="container text-center">
     <div class="title p-5">
         <h1>Node File Uploader</h1>
         <p class="subtitle">Upload Images to the <strong>server</strong></p>
     </div>
     <div class="row justify-content-center">
         <div class="col-4">
             <form action="/uploadmultiple" enctype="multipart/form-data" method="post">
             <div class="row">
                 <div class="col-8">
                  <input type="file" class="form-control" name="images" id="formFile" multiple>
                 </div>
                 <div class="col-2">
                     <input type="submit" value="upload images" class="btn btn-warning">
                 </div>
             </div>
             
             </form>
         </div>
     </div>

     {{!-- Display Images --}}
 
      <section class="mt-5">
          <div class="row">
                  {{#each images}}
                   {{#each this}}

                   {{#if imageBase64}}
                         <div class="col-3">
       <div class="card shadow" style="width: 18rem;">
            <img class="card-img-top" src='data:{{contentType}};base64,{{imageBase64 }}' alt="Card image cap" class="img-fluid" width="200px" height="200px">
            <div class="card-body">
            <h5 class="card-title font-poppins">UI/UX Design</h5>
            <p class="card-text text-secondary font-size-09">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="btn btn-info font-size-09 text-light">Read More</a>
            </div>
            </div>
                         </div>
                   {{/if}}
                   {{/each}}
                  {{/each}}
     
              </div>
      </section>

 </div>
</section>